{
  "name": "@herbsjs/suma",
  "version": "1.2.0",
  "description": "Suma helps with single value validations emiting error codes only",
  "main": "./src/suma.js",
  "scripts": {
    "test": "mocha --timeout 999999 --colors --recursive ./test",
    "lint": "npx eslint \"**/*.{js,jsx}\" --quiet",
    "lint:fix": "npx eslint \"**/*.{js,jsx}\" --fix",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "directories": {
    "lib": "src",
    "test": "test",
    "example": "examples"
  },
  "engines": {
    "node": ">= 12.3.0"
  },
  "keywords": [
    "entity",
    "value object",
    "validation",
    "error code only"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "semantic-release": "^17.4.4"
  },
  "author": "David Lojudice Sobrinho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/herbsjs/suma.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
